<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
  <property>
    <name>zookeeper.connect</name>
    <value>${@//site/global/zookeeper}/kafka/${@//site/global/instance.name}</value>
  </property>
  <property>
    <name>broker.id</name>
    <value>${@//site/global/app_container_tag}</value>
  </property>
  <property>
    <name>log.dir</name>
    <value>${@//site/global/app_pid_dir}</value>
  </property>
  <property>
    <name>content</name>
    <value>
      {%- for k,v in server_config.iteritems() %}
      {%-   if k != "content" %}
      {{k}}={{v}}
      {%   endif %}
      {% endfor %}
    </value>
  </property>
</configuration>
